extends ../layout
block content
   .container
      .row
         .col-md-5
            form(method="POST", action="/user/signup")
               .modal-body
                  .form-group
                     label(for="signinName") 用户名
                     // disabled 之后 ？ req.body.user 对象没有name值 ？
                     input#signinName.form-control(name="user[name]", type="text" disabled value=user.name)
                     input(name="user[name]", type="hidden" value=user.name)
                  .form-group
                     label(for="signinPassword") 密码
                     input#signinPassword.form-control(name="user[password]", type="text")
               .modal-footer
                  button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                  button.btn.btn-success(type="submit") 提交